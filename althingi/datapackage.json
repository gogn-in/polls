{
  "name": "is-polls-althingi",
  "title": "Support for political parties in polls in Iceland",
  "license": "cc-by 3.0",
  "homepage": "https://github.com/gogn-in/polls",

  "description": "",

  "version": "1.0.0",
  "sources": [{
    "name": "Markaðs og miðlarannsóknir",
    "web": "https://docs.google.com/spreadsheets/d/1T2t4HRHzTbFWp89fs-bUjOgk7X1FVt_zIThftmxy-IY/export?format=csv"
  }, {
    "name": "Gallup",
    "web": "https://datamarket.com/data/set/yf5/"
  }, {
    "name": "Morgunblaðið",
    "web": "http://www.mbl.is/frettir/kosningar/kannanir.csv"
  }],
  "author": "@gogn.in",
  "keywords": [ "election", "polling", "survey", "parliament", "iceland" ],

  "countryCode": "is",
  "language": "is",

  "profiles": {
    "dimensional": "*",
    "tabular": "*"
  },

  "granularity": "aggregated",
  "time_granularity": "date",

  "resources": [

    {
      "path": "data/data.csv",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [{
          "name": "poll_id",
          "type": "integer"
        }, {
          "name": "party_id",
          "type": "integer"
        }, {
          "name": "support",
          "type": "number",
          "title": "Support (%)"
        }],
        "foreignKeys": [{
          "fields": "poll_id",
          "reference": {
            "resource": "polls.csv",
            "fields": "poll_id"
          }
        }, {
          "fields": "party_id",
          "reference": {
            "resource": "parties.csv",
            "fields": "party_id"
          }
        }]
      }
    },

    {
      "path": "data/polls.csv",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [{
          "name": "poll_id",
          "type": "integer"
        }, {
          "name": "pollster_id",
          "type": "integer"
        }, {
          "name": "publish_date",
          "type": "date",
          "title": "Publish date",
          "format": "fmt:%Y-%m-%d"
        }, {
          "name": "sample_size",
          "type": "number",
          "title": "Sample size"
        }, {
          "name": "response_rate",
          "type": "number",
          "title": "Response rate"
        }],
        "foreignKeys": [{
          "fields": "pollster_id",
          "reference": {
            "resource": "pollsters.csv",
            "fields": "pollster_id"
          }
        }]
      }
    },

    {
      "path": "data/pollsters.csv",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [{
          "name": "pollster_id",
          "type": "integer"
        }, {
          "name": "name",
          "title": "Poller",
          "type": "string"
        }]
      }
    },

    {
      "path": "data/parties.csv",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [{
          "name": "party_id",
          "type": "integer"
        }, {
          "name": "name",
          "title": "Political party",
          "type": "string"
        }]
      }
    }

  ],

  "mapping": {

    "measures": {
      "support": {
        "resource": "data",
        "source": "support",
        "unit": "percent",
        "factor": 1
      },
      "sample_size": {
        "resource": "polls",
        "source": "sample_size",
        "unit": "population",
        "factor": 1
      },
      "response_rate": {
        "resource": "polls",
        "source": "response_rate",
        "unit": "population",
        "factor": 1
      }
    },

    "dimensions": {

      "party": {
        "dimensionType": "entity",
        "attributes": {
          "id": {
            "resource": "parties",
            "source": "party_id"
          },
          "title": {
            "resource": "parties",
            "source": "name"
          }
        },
        "primaryKey": "id"
      },

      "pollster": {
        "dimensionType": "entity",
        "attributes": {
          "id": {
            "resource": "pollsters",
            "source": "pollster_id"
          },
          "title": {
            "resource": "pollsters",
            "source": "name"
          }
        },
        "primaryKey": "id"
      },

      "date": {
        "dimensionType": "datetime",
        "attributes": {
          "date": {
            "resource": "polls",
            "source": "publish_date"
          }
        },
        "primaryKey": "date"
      }

    }
  }

}
